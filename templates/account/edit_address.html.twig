{% extends 'base.html.twig' %}

{% block content %}
    <div class="my-5">
        <h1>Modify address - {% if address %}{{ address.name }}{% endif %}</h1>
        <p>From here, you can add address to your profile.</p>
        <hr>

        <ul class="mb-3">
            <li>
                <a href="{{ path('account') }}">Addresses</a>
            </li>
        </ul>

        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.firstname) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.lastname) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.name) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.address) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.country) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.city) }}
            </div>
            <div class="col-md-12">
                {{ form_row(form.phone) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
